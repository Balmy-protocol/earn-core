{
  "name": "@balmy/earn",
  "description": "This repository adds existing contracts the ability to perform stateless simulations",
  "version": "0.0.0",
  "author": {
    "name": "Balmy",
    "url": "https://github.com/balmy-protocol"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-foundry": "^1.1.1",
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@types/chai": "^4.3.11",
    "@types/mocha": "^10.0.6",
    "chai": "4.3.8",
    "hardhat": "^2.19.4",
    "mocha": "^10.2.0",
    "prettier": "^2.8.7",
    "solhint-community": "^3.5.0",
    "ts-node": "10.9.1",
    "typescript": "5.2.2",
    "@typechain/ethers-v5": "10.2.1",
    "@typechain/hardhat": "6.1.6",
    "@nomicfoundation/hardhat-network-helpers": "1.0.8",
    "@nomicfoundation/hardhat-toolbox": "2.0.2",
    "@nomiclabs/hardhat-etherscan": "3.1.7",
    "solidity-coverage": "0.8.4",
    "typechain": "8.3.1",
    "hardhat-gas-reporter": "1.0.9",
    "@nomicfoundation/hardhat-chai-matchers": "1.0.6"
  },
  "files": [
    "contracts"
  ],
  "keywords": [
    "blockchain",
    "ethereum",
    "forge",
    "foundry",
    "smart-contracts",
    "solidity",
    "template"
  ],
  "scripts": {
    "clean": "rm -rf cache out",
    "lint": "pnpm lint:sol && pnpm prettier:check",
    "lint:sol": "forge fmt --check && pnpm solhint \"{script,src,test}/**/*.sol\"",
    "prettier:check": "prettier --check \"**/*.{json,md,yml}\"",
    "prettier:write": "prettier --write \"**/*.{json,md,yml}\"",
    "prepublishOnly": "cp -r ./src ./contracts",
    "postpublish": "rm -r ./contracts",
    "test-hardhat": "npx hardhat compile --no-typechain --show-stack-traces && npx hardhat test"
  },
  "publishConfig": {
    "access": "public"
  }
}
